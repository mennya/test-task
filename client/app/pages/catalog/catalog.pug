md-grid-list.catalogGrid(
												md-cols-xs="1"
												md-cols-sm="2"
												md-cols-md="4"
												md-cols-gt-md="5"
												md-cols-xl="7"
												md-gutter="1em"
												md-row-height="270px"
												)
	md-grid-tile(ng-repeat="catalog in vm.catalogs" ui-sref='.detail({id: catalog.id, title: catalog.title.default})')
		img(ng-src='{{vm.storage.getLink(catalog.cover)}}' err-src='{{vm.storage.getLink("default")}}')
		md-grid-tile-footer
			h3 {{catalog.title.default}}