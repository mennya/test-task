md-sidenav.md-sidenav-left.md-whiteframe-z2(md-component-id='left'
																						md-is-open='vm.opened'
																						md-is-locked-open='vm.sidenavLocked'
																						md-swipe-left='vm.opened=false'
																						)

	md-toolbar.md-primary(layout='row' layout-align='start center')
		md-button(ui-sref='app.main' style='text-transform: none;') {{vm.APP_CONSTS.APP_NAME}}
		div(flex)
		md-button.md-icon-button(title='закрепить' aria-label='lock' ng-click='vm.lock()' ng-if='!vm.mobile')
			md-icon(ny-md-icon='backburger' ng-class='{"rotate180": !vm.sidenavLocked, "rotate0": vm.sidenavLocked}')

	md-content

		ul.sidenav-menu
			li.parent-list-item
				menu-toggle(section='vm.profileSection' ng-if='vm.auth.isAuthenticated()')

		ul.sidenav-menu
			li.parent-list-item(ng-repeat='section in vm.nav')
				h2.menu-heading(ng-if='::section.type === "heading"')
					| {{section}}
				menu-link(section='section' ng-if='::section.type === "link"')
				menu-toggle(section='section' ng-if='::section.type === "toggle"')