#left,
#left.md-locked-open-add-active,
#left.md-locked-open
	width: 272px
	min-width: 272px
	max-width: 272px

#left > *
	min-width: 218px

.sidenav-menu,
.sidenav-menu ul
	list-style: none;
	padding: 0;
	max-width: 100%;

.sidenav-menu li
	margin: 0;

.sidenav-menu > li:nth-child(1)
	border-top: none;

.md-whiteframe-glow-z1
	box-shadow: 0px 0px 1px 1px rgba(0, 0, 0, 0.14),
			0px 0px 2px 2px rgba(0, 0, 0, 0.098),
			0px 0px 5px 1px rgba(0, 0, 0, 0.084);

.sidenav-menu .md-button
	border-radius: 0;
	cursor: pointer;
	display: block;
	align-items: inherit;
	line-height: 40px;
	margin: 0;
	max-height: 40px;
	overflow: hidden;
	padding: 0 16px;
	text-align: left;
	text-decoration: none;
	white-space: normal;
	width: 100%;

html[dir=rtl] .sidenav-menu .md-button,
body[dir=rtl] .sidenav-menu .md-button
	unicode-bidi: embed;
	text-align: right;

.sidenav-menu md-select /* Override md-select margins.  With margins the menu will look incorrect and causes mobile list
     to not be scrollable.
   */
	margin: 0;
	width: 100%;

.sidenav-menu md-select md-select-label
	justify-content: flex-end;
	padding-top: 10px;

.sidenav-menu md-select md-select-label span
	margin-right: auto;
	padding-left: 13px;

.sidenav-menu md-select .md-select-icon
	margin-right: 28px;

.sidenav-menu button.md-button::-moz-focus-inner
	padding: 0;

.menu-heading
	display: block;
	line-height: 32px;
	margin: 0;
	padding: 8px 16px 0;
	text-align: left;
	width: 100%;
	color: rgba(255, 255, 255, 0.54)

html[dir=rtl] .menu-heading,
body[dir=rtl] .menu-heading
	unicode-bidi: embed;
	text-align: right;

.menu-toggle-list
	overflow: hidden;
	position: relative;
	z-index: 1;
	transition: 0.35s cubic-bezier(0.35, 0, 0.25, 1);
	transition-property: height;

.sidenav-menu .menu-toggle-list a.md-button
	display: block;
	padding: 0 16px 0 32px;
	text-transform: none;
	text-rendering: optimizeLegibility;
	font-weight: 500;

.parent-list-item:last-child {
	/* Prevent the hidden License link from causing a double bottom-border */
	border-bottom: none;
}

.md-button-toggle .md-toggle-icon
	display: block;
	margin-left: auto;
	speak: none;
	vertical-align: middle;
	transform: rotate(180deg);
	transition: transform 0.3s ease-in-out;

.md-button-toggle .md-toggle-icon.toggled
	transform: rotate(0deg)